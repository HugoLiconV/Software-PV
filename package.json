{
  "name": "punto-de-venta",
  "version": "1.0.0",
	"main": "src",
	"private": true,
	"scripts": {
		"start": "node .",
		"test": "jest --colors",
		"test:products": "npm test src/api/products/index\".test\".js$",
		"test:suppliers": "npm test src/api/proveedores/index\".test\".js$",
		"test:register": "npm test src/api/caja/index\".test\".js$",
		"test:unit": "npm test \"src/**/!(index).test.js\"",
		"test:integration": "npm test \"src/**/index.test.js\"",
		"coverage": "npm test -- --coverage",
		"postcoverage": "opn coverage/lcov-report/index.html",
		"dev": "nodemon -i \"*.test.js\" .",
		"prod": "cross-env NODE_ENV=production nodemon -i \"*.test.js\" -r dotenv-safe/config .",
		"lint": "eslint src",
		"docs": "apidoc -i src -o docs && apidoc-markdown -p docs -o DOCS.md",
		"postdocs": "opn docs/index.html"
  },
  "author": "",
  "license": "ISC",
  "jest": {
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup.js"
  },
  "devDependencies": {
    "apidoc": "0.16.1",
    "apidoc-markdown": "^0.2.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "^18.0.0",
    "eslint": "3.19.0",
    "eslint-config-standard": "^6.0.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-promise": "^3.0.0",
    "eslint-plugin-standard": "^2.0.0",
    "jest-cli": "18.1.0",
    "mockgoose": "6.0.8",
    "nock": "^9.0.2",
    "nodemon": "^1.10.2",
    "supertest": "^2.0.0",
    "supertest-as-promised": "^4.0.0"
  },
  "dependencies": {
    "babel-core": "^6.17.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-1": "^6.16.0",
    "babel-runtime": "^6.11.6",
    "bluebird": "^3.4.0",
    "body-parser": "1.18.2",
    "bodymen": "1.0.3",
    "compression": "1.7.1",
    "cors": "2.8.4",
    "dotenv-safe": "4.0.4",
    "express": "4.16.2",
    "lodash": "4.17.4",
    "mongoose": "4.13.4",
    "mongoose-create-unique": "^0.4.1",
    "mongoose-keywords": "^0.3.1",
    "morgan": "1.9.0",
    "querymen": "2.1.3",
    "request": "2.83.0",
    "request-promise": "^4.1.1"
  }
}
